});
$("#icon-video-close").on("click", function() {
  ytplayer = document.getElementById("ytapiplayer");
  try {
    ytplayer.stopVideo();
    $(ytplayer).hide();
    $("#video-container").fadeOut(400);
  } catch(e) {
    console.log('Video not available');
    $("#video-container").fadeOut(400);
